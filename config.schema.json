{
  "pluginAlias": "BcpCharger",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "chargers": {
        "title": "Chargers",
        "type": "array",
        "required": true,
        "items": {
          "title": "Charger",
          "type": "object",
          "properties": {
            "code": {
              "title": "Charger's identifier code",
              "type": "string",
              "required": true
            },

            "password": {
              "title": "Password",
              "type": "string",
              "required": true,
              "default": "123456"
            },

            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "default": "Charger"
            },

            "refreshInterval": {
              "title": "Refresh interval (milliseconds)",
              "type": "integer",
              "required": true,
              "default": 5000
            },

            "pluggedStateIsDetected": {
              "title": "Perceive 'plugged' state as contact sensor being 'contact detected'",
              "type": "boolean",
              "required": true,
              "default": true
            },

            "separateChargeSwitch": {
              "title": "Present the charge switch as a separate accessory",
              "type": "boolean",
              "required": true,
              "default": false
            },

            "currentSwitches": {
              "title": "Current switches",
              "type": "array",
              "required": false,
              "items": {
                "title": "Current switch",
                "type": "object",
                "required": true,
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "required": true
                  },

                  "current": {
                    "title": "Current (Ampers)",
                    "type": "integer",
                    "required": true,
                    "default": 16,
                    "minimum": 6,
                    "maximum": 32
                  }
                }
              }
            },

            "riskFaultSensor": {
              "title": "Fault sensor for high risk issues",
              "type": "object",
              "required": false,
              "properties": {
                "name": {
                  "title": "Name",
                  "type": "string",
                  "required": true,
                  "default": "Fault sensor"
                },

                "type": {
                  "title": "Sensor type",
                  "type": "string",
                  "required": true,
                  "default": "smoke",
                  "oneOf": [
                    {
                      "title": "Smoke sensor",
                      "enum": [
                        "smoke"
                      ]
                    },
                    {
                      "title": "Leak sensor",
                      "enum": [
                        "leak"
                      ]
                    },
                    {
                      "title": "Contact sensor",
                      "enum": [
                        "contact"
                      ]
                    }
                  ]
                },

                "faultContactIsDetected": {
                  "title": "Only when sensor type is 'contact', should fault state be 'contact detected'?",
                  "type": "boolean",
                  "required": true,
                  "default": true
                }
              }
            },

            "operationFaultSensor": {
              "title": "Fault sensor for operational issues",
              "type": "object",
              "required": false,
              "properties": {
                "name": {
                  "title": "Name",
                  "type": "string",
                  "required": true,
                  "default": "Fault sensor"
                },

                "type": {
                  "title": "Sensor type",
                  "type": "string",
                  "required": true,
                  "default": "smoke",
                  "oneOf": [
                    {
                      "title": "Smoke sensor",
                      "enum": [
                        "smoke"
                      ]
                    },
                    {
                      "title": "Leak sensor",
                      "enum": [
                        "leak"
                      ]
                    },
                    {
                      "title": "Contact sensor",
                      "enum": [
                        "contact"
                      ]
                    }
                  ]
                },

                "faultContactIsDetected": {
                  "title": "Only when sensor type is 'contact', should fault state be 'contact detected'?",
                  "type": "boolean",
                  "required": true,
                  "default": true
                }
              }
            }
          }
        }
      }
    }
  }
}
